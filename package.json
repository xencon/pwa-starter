{
  "name": "pwa-starter",
  "version": "0.0.1",
  "description": "A starter kit for building PWAs!",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "build": "nx exec -- yarn _build ",
    "start": "npm run dev",
    "start-remote": "vite --host",
    "_build": "tsc && vite build",
    "serenity": "failsafe serenity:update serenity:clean wdio serenity:report",
    "serenity:update": "serenity-bdd update",
    "serenity:clean": "rimraf target",
    "wdio": "wdio run ./wdio.conf.ts",
    "serenity:report": "serenity-bdd run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.4.0",
    "@thepassle/app-tools": "^0.9.9",
    "lit": "^2.7.2",
    "urlpattern-polyfill": "^7.0.0",
    "workbox-build": "^6.5.2",
    "workbox-core": "^6.5.2",
    "workbox-precaching": "^6.5.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@nx/cypress": "^17.2.8",
    "@serenity-js/assertions": "^3.15.1",
    "@serenity-js/console-reporter": "^3.15.1",
    "@serenity-js/core": "^3.15.1",
    "@serenity-js/cucumber": "^3.15.1",
    "@serenity-js/rest": "^3.15.1",
    "@serenity-js/serenity-bdd": "^3.15.1",
    "@serenity-js/web": "^3.15.1",
    "@serenity-js/webdriverio": "^3.15.1",
    "@types/node": "^20.11.10",
    "@wdio/cli": "^8.29.1",
    "@wdio/local-runner": "^8.29.2",
    "@wdio/spec-reporter": "^8.29.1",
    "npm-failsafe": "^1.2.0",
    "nx": "17.2.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4",
    "vite": "^4.5.2",
    "vite-plugin-pwa": "^0.14.7"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  },
  "nx": {
    "targets": {}
  }
}
